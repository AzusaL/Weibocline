<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="AzusaL "
            android:textColor="#a2a0a0"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/main_rl"
        android:background="@drawable/common_shadow_top" />

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#ffffff" >
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/common_shadow_bottom" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bottom_layout1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bottom_bt1"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/home"
                android:clickable="false" />

            <TextView
                android:id="@+id/bottom_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#a2a0a0"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bottom_bt2"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/news"
                android:clickable="false" />

            <TextView
                android:id="@+id/bottom_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#a2a0a0"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bottom_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/add_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bottom_bt3"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/search"
                android:clickable="false" />

            <TextView
                android:id="@+id/bottom_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textColor="#a2a0a0"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bottom_bt4"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/me"
                android:clickable="false" />

            <TextView
                android:id="@+id/bottom_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="#a2a0a0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>